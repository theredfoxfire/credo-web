{% extends 'baseAdmin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
    <h1>About us list</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>About us</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            {% for aboutus in pagination %}
            <tr>
                <td><a href="{{ path('aboutus_show', { 'id': aboutus.id }) }}">{{ pagination.getPaginationData.firstItemNumber + loop.index - 1 }}</a></td>
                <td>{{ aboutus.story | raw }}</td>
                <td>
                    <a class="btn btn-small" href="{{ path('aboutus_edit', { 'id': aboutus.id }) }}">
                      <button type="submit" class="btn btn-small">
                        <i class="fa fa-pencil-square-o "></i>
                        Edit
                      </button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
