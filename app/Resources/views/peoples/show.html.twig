{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Peoples</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ people.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ people.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ people.description }}</td>
            </tr>
            <tr>
                <th>Profileimage</th>
                <td>{{ people.profileImage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('peoples_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('peoples_edit', { 'id': people.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
