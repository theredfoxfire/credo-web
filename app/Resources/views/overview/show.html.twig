{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Overview</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ overview.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ overview.title }}</td>
            </tr>
            <tr>
                <th>Story</th>
                <td>{{ overview.story }}</td>
            </tr>
            <tr>
                <th>Largeimage</th>
                <td>{{ overview.largeImage }}</td>
            </tr>
            <tr>
                <th>Smallimage</th>
                <td>{{ overview.smallImage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('overview_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('overview_edit', { 'id': overview.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
