{% extends 'baseAdmin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
    <h1>Overview list</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Largeimage</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            {% for overview in pagination %}
            <tr>
                <td><a href="{{ path('overview_show', { 'id': overview.id }) }}">{{ pagination.getPaginationData.firstItemNumber + loop.index - 1 }}</a></td>
                <td><img src="{{ asset('uploads/overview/') }}{{ overview.largeImage }}" height="100" width="100"></td>
                <td>{{ overview.overview | raw }}</td>
                <td>
                    <a class="btn btn-small" href="{{ path('overview_edit', { 'id': overview.id }) }}">
                      <button type="submit" class="btn btn-small">
                        <i class="fa fa-pencil-square-o "></i>
                        Edit
                      </button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
