{% extends 'base.html.twig' %}

{% block body %}
    <h1>Download</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ download.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ download.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ download.subtitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ download.description }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ download.file }}</td>
            </tr>
            <tr>
                <th>Smallimage</th>
                <td>{{ download.smallImage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('download_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('download_edit', { 'id': download.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
